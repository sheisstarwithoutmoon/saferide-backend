# Environment
NODE_ENV=development

# Server
PORT=5000
HOST=localhost

# MongoDB
MONGODB_URI=mongodb://localhost:27017/safe_ride
MONGODB_TEST_URI=mongodb://localhost:27017/safe_ride_test

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Redis (Optional - for session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Firebase Admin SDK
# Method 1: Use service account file (for local development)
FIREBASE_PROJECT_ID=alpha-flutter-health
FIREBASE_PRIVATE_KEY_PATH=./firebase-service-account.json

# Method 2: Use environment variables (for production/Render deployment)
# Uncomment these and comment out FIREBASE_PRIVATE_KEY_PATH above
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@alpha-flutter-health.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# Twilio SMS (Optional - for SMS fallback)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# App Settings
MAX_EMERGENCY_CONTACTS=5
ALERT_TIMEOUT_SECONDS=15
LOCATION_UPDATE_INTERVAL_MS=5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*
